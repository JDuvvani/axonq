{
  "extends": "@axon/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2024"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@middleware/*": ["src/middleware/*"],
      "@v1/*": ["src/modules/v1/*"],
      "@types": ["src/types/index.js"],
      "@sockets": ["src/sockets/index.js"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}
